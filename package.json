{
  "name": "ecommerce-application",
  "version": "1.0.0",
  "description": "This platform replicates real-world shopping experiences in a digital environment, allowing users to browse products, add them to a cart, and complete purchases. It includes features like user authentication, product management, and order processing.",
  "main": "index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "deploy": "tsc --noEmit && npm run build && gh-pages -d dist",
    "format": "prettier --write \"**/*\" --ignore-unknown",
    "format:check": "prettier --check \"**/*\" --ignore-unknown",
    "stylelint": "stylelint '**/*.{css,scss}'",
    "stylelint:fix": "stylelint '**/*.{css,scss}' --fix",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "husky .husky"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.22.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "commitlint": "^19.8.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-unicorn": "^58.0.0",
    "gh-pages": "^6.3.0",
    "globals": "^16.0.0",
    "lint-staged": "^15.5.1",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "sass-embedded": "^1.87.0",
    "stylelint": "^16.18.0",
    "stylelint-config-clean-order": "^7.0.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sorcerers-apprentices/eCommerce-Application.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sorcerers-apprentices/eCommerce-Application/issues"
  },
  "homepage": "https://github.com/sorcerers-apprentices/eCommerce-Application#readme"
}
